<% if @comment.group_id.present? %> 
  $(".ExistingComments").append("<%= j (render @comment) %>");
  $(".enter-comment form").trigger("reset");
<% else %>
  $("#<%=@comment.commentable_type%><%=@comment.commentable_id%> .ExistingComments").append("<%= j (render @comment) %>");
  $("#<%=@comment.commentable_type%><%=@comment.commentable_id%> .enter-comment form").trigger("reset");
<%end%>
