<% if @comment.group_id %> 
  $(".ExistingComments").append("<%= j (render @comment) %>");
  $(".enter-comment form").trigger("reset");
<% elsif @comment.answer_id %>
  $("answer<%=@parent.id%> .ExistingComments").append("<%= j (render @comment) %>");
  $("answer<%=@parent.id%> .enter-comment form").trigger("reset");
<%end%>
