%li.dropdown-header
  -if @notifications.length == 0
    %li.notifications-header
      No Notifications Yet
  -else
    %li.notifications-header
      Notifications
    - @notifications.each do |n|
      %li{class: (n.read? ? "notifications-item" : "notifications-item unread")}
        - if n.comment_id
          - if n.comment.group_id
            =link_to group_path(n.comment.group), data: {"unread": n.read? ? nil : n.id } do
              .notifier-type
                = 'comment'
              .notification-title
                =n.comment.group.title
              .notifier-body
                =n.comment.body[0..60]
          - elsif n.comment.question_id
            =link_to question_path(n.comment.question), data: {"unread": n.read? ? nil : n.id } do
              .notifier-type
                = 'comment'
              .notification-title
                =n.comment.question.title
              .notifier-body
                =n.comment.body[0..60]
        - elsif n.answer_id
          =link_to question_path(n.answer.question), data: {"unread": n.read? ? nil : n.id } do
            .notifier-type
              = 'answer'
            .notification-title
              =n.answer.question.title
            .notifier-body
              =n.answer.body[0..60]
    %li.see-all
      =link_to 'See all notifications', notifications_path



        