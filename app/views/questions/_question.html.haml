.link
  .card.frow{id: "Question#{question.id}"}
    .profile-pic.size-30px
      = render 'partials/profile_picture', user: question.user, size: :small
    .fcol
      .frow.bottom-space
        %h4.title
          =link_to("#{question.title}", question_path(question))
        .time.grey
          =local_relative_time(question.created_at, type: 'time-or-date')

      .frow
        .tags
          
          =link_to("#{question.university_name}", show_questions_in_university_path(question.university_domain), class: "btn btn-xs btn-info", role: "button")
          =link_to("#{question.course_name}", show_questions_in_course_path("#{question.course_name},#{question.university_domain}"), class: "btn btn-xs btn-info", role: "button")
          -if question.num_answers == 0
            =link_to("unanswered", questions_unanswered_path("#{question.course_name},#{question.university_domain}"), class: "btn btn-xs btn-success", role: "button")
